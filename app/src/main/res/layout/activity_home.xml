<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Welcome "
               android:layout_marginTop="30dp"
               android:layout_marginLeft="25dp"
               android:textSize="30sp"
               android:textColor="@color/black"
               android:textStyle="bold"/>

           <TextView
               android:id="@+id/shared_prefs_text_view"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="0dp"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:textSize="30sp"/>
       </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <!-- Lights-->

    <TextView
        android:id="@+id/lights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lights"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="150dp"
        android:textColor="@color/black" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

         <TextView
             android:id="@+id/on_off"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="On/Off"
             android:textSize="20sp"
             android:textColor="@color/black" />

         <Switch
             android:id="@+id/lights_toggle_switch"
             android:layout_width="wrap_content"
             android:layout_marginLeft="80dp"
             android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Started"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/current_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:hint="5:12pm"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="25dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time On"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <Chronometer
            android:id="@+id/chronometer_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/light_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Off"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="91dp"/>

    </LinearLayout>


    <!-- Fans-->

    <TextView
        android:id="@+id/fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fans"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="150dp"
        android:textColor="@color/black" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/on_off_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On/Off"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/fans_toggle_switch"
            android:layout_width="wrap_content"
            android:layout_marginLeft="90dp"
            android:checked="false"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_text_view_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Started"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/current_time_text_view_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:hint="5:12pm"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="25dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time On"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <Chronometer
            android:id="@+id/chronometer_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/fans_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Off"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="91dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Show Active Time Graph"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:onClick="showGraph"
        android:textAllCaps="false"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="105dp" />

